{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "storageaccountname": {
      "type": "string"
     
    },
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "publicIPAddressName": {
      "type": "string"
    },
    "vnetName": {
      "type": "string"
    },
    "subnet1Name": {
      "type": "string"
    },
    "ipconfig": {
      "type": "string"
    },
    "windowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "2016-Nano-Server",
        "2016-Datacenter-with-Containers",
        "2016-Datacenter"
      ]
    }
  },
  "variables": {
   
    "storageAccountName": "[parameters('storageaccountname')]",
   
    "vmName": "[parameters('virtualMachineName')]"
  },
  "resources": [
    
    
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vmName')]",
      "location": "[resourceGroup().location]",
      
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "storageProfile": {
          "osDisk": {
            "osType": "Windows",
            "name": "VMwindows-osDisk",
            "createOption": "FromImage",
            "image": {
              "uri": "https://dmsessionstorageac.blob.core.windows.net/vhd/ConvertedVHD.vhd"
            },
            "vhd": {
              "uri": "[concat('http://','dmsessionstorageac','.blob.core.windows.net/vhds/',parameters('virtualMachineName'),'-osDisk.vhd')]"
            },
            "caching": "ReadWrite"

          },
          "dataDisks": [
            {
              "diskSizeGB": 1023,
              "lun": 0,
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "properties": {
                "primary": true
              },
              "id": "[resourceId('Microsoft.Network/networkInterfaces','win2016303')]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {}
}
